<div><br /></div>
<div class='container'>
	<div class='row'>

		<div class='col-12'>
			<table class='table'>
				<thead>
					<tr>
						<th scope='col'>Descripcion</th>
						<th scope='col'>Codigo de producto</th>
						<th scope='col'>Precio</th>
						<th scope='col'>Stock</th>
						<th scope='col'>ID</th>
						<th scope='col'>Imagen</th>
						
				</thead>
				<tbody>
					{{#each docs}}
						<tr>
							<th scope='row'>{{this._id}}</th>
							<td>{{this.description}}</td>
							<td>{{this.code}}</td>
							<td>{{this.price}}</td>
							<td>{{this.stock}}</td>
							<td>{{this.id}}</td>
                            {{#if this.thumbnails}}
				<p > Imagen:  {{this.thumbnails}}</p>
			{{/if}}
							
						</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
		<div class="col-12 text-center">
			<nav>
				<ul class="pagination">
					{{#if hasPrevPage}} <li class="page-item"> {{else}}<li class="page-item disabled">{{/if}}
					<a class="page-link" href="?limit={{limit}}&page={{prevPage}}&category={{category}}">Previous</a>
					</li>
					<li class="page-item active" aria-current="page">
					<a class="page-link" href="#">{{ page }}</a>
					</li>
					{{#if hasNextPage}} <li class="page-item"> {{else}}<li class="page-item disabled">{{/if}}
					<a class="page-link" href="?limit={{limit}}&page={{nextPage}}&category={{category}}">Next</a>
					</li>
				</ul>
			</nav>
		</div>

	</div>
</div>